<div class="container">
  <table class="table">
    <tr>
      <th></th>
      <td>コメント</td>
      <td>選手名</td>
      <td>いいね数</td>
      <td>投稿日時</td>
      <td></td>
    </tr>
    
     <% @comments.each do |comment| %>
    <tr>
      <th></th>
      <td><%= comment.body %></td>
      <td><%= link_to comment.player.name, player_path(comment.player.id) %></td>
      <td><%= comment.favorites.count %></td>
      <td><%= comment.created_at.strftime('%Y/%m/%d %H:%M') %></td>
      <td><%= link_to '詳細', comment_path(comment.id), class: "btn btn-primary" %></td>
      <td><%= link_to '編集', edit_comment_path(comment.id), class: "btn btn-success" %></td>
      <td><%= link_to '削除', player_comment_path(comment.player, comment), method: :delete, class: "btn btn-danger" %></td>
    </tr>
      <% end %>
    <tbody>
    </tbody>
  </table>
</div>